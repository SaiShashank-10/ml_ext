# TASK 3 ---
## PCA ------

from numpy import array
from numpy import mean
from numpy import cov
from numpy.linalg import eig

A = array([[1,2], [3,4], [5,6]])
print('Array')
print(A)

M  = mean(A.T, axis = 1)
print('Mean')
print(M)

C  = A - M
print('Center')
print(C)

V = cov(C.T)
print('Cov Mat')
print(V)

vectors, values = eig(V)
print('Eigen Vectors')
print(vectors)
print('Eigen Values')
print(values)

P = vectors.T.dot(C.T)
print('PCA - ')
print(P)

